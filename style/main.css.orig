@import url('https://fonts.googleapis.com/css?family=Euphoria+Script|Oxygen&display=swap');

/** Variable declarations **/
:root {
    --headerHeight: 100px;
}

/** Main elements **/

html {
    height: 100%
}

body {
    height: 100%;
    margin: 0;
    padding: 0;
    font-family: 'Oxygen', sans-serif;
}

header {
    position: fixed;
    box-shadow: 10px 10px 20px silver;
    background: white;
    width: 100%;
    z-index: 2;
    text-align: center;
    overflow: hidden;
    height: 100px;
}
header:hover {
    height: initial;
}

main {
    height: 100%;
    width: 100%;
}

aside {
    position: fixed;
    left: 1em;
    top: calc(var(--headerHeight) + 4em);
    background: white;
    padding: 1em;
    width: 20%;
    max-width: 400px;
    min-width: 300px;
    height: 50%;
    min-height: 400px;
    z-index: 1;
    box-shadow: 10px 10px 20px silver;
    opacity: 0.95;
}

#map {
    height: 100%;
    width: 100%;
}

header h1 {
    font-family: 'Euphoria Script', cursive;
    font-size: 2.5em;
}

aside {
    display: none;
}

aside.places {
    display: block;
    border: solid white 4px;
    background: lightgreen;
}

aside.events {
    display: block;
    border: solid white 4px;
    background: lightyellow;
}

aside.filter {
    display: block;
    border: solid white 4px;
    background: lightblue;
}
aside.filter form{
    display: block;
}

/** Article buttons **/
button[name='cancel'],
button[name='save'],
.editing button[name='edit'] {
    display: none;
}

.editing button[name='cancel'],
.editing button[name='save'],
button[name='edit'] {
    display: inline-block;
}

aside form {
    display: none;
}

aside.editing form {
    display: block;
}
aside .label{
    width: 30%;
    display: inline-block;
}

label[name='neighborhood'] {
    display: block;
}
input[name='neighborhood'] {
    width: 80%;
    padding: 0.2em;
    text-align: center;
    margin: 0.4em auto;
    display: block;
}


